extends layout

block content
    .w3-card-4
        header.w3-container.w3-pale-yellow
            h3 Lista de Alunos 
            if lista.length > 0
                .w3-container
                    table(class="w3-table-all")
                        tr
                            th Número
                            th Nome 
                            th Git
                            th
                        each a in lista
                            tr
                                td 
                                    a(href='/alunos/'+a.Número) #{a.Número}     
                                td= a.Nome
                                td= a.Git
                                td
                                    button.w3-btn.w3-pale-red(onclick="apagarAluno('" + a._id + "')" class='fa fa-trash') Apagar
            else
                div(class="w3-container")
                    p Ainda não há alunos
            footer
                p
                    a(href="/registar") Página de Registo
                address Gerado por galuno :: 2020-novembro, jcr