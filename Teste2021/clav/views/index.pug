extends layout

block content
  .w3-container
    .w3-card-4
      header.w3-container.w3-teal.w3-margin-top
        h3 CLAV - Classificação e Avaliação da Informação Pública
    .w3-card-4
      header.w3-container.w3-teal.w3-margin-top
        h4 Lista de Tipologias
      table.w3-table-all
        tr
          th Identificador
          th Sigla
          th Designação
          th Estado
        each tip in lista
                tr
                    td
                      a(href="http://localhost:5666/tipologia/" + tip.id)=tip.id
                    td= tip.sigla
                    td= tip.designacao
                    td= tip.estado
